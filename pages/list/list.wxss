page {
    background-color: #f7f7f7;
    padding-top: 50px;
}

.header {
    position: fixed;
    top: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 30px;
    line-height: 30px;
    padding: 0 30rpx;
    font-size: 12px;
    color: #fff;
    background-color: #1596f2;
    z-index: 1000;
}

.list_number {
    flex-shrink: 0;
    flex-grow: 1;
    text-align: right;
    justify-content: space-around;
    align-items: center;
    height: 30px;
    font-size: 16px;
    color: #fff;
}

.list {
  padding: 0 12rpx 10rpx 12rpx;
  text-align: center;
}

.list-item {
  display: inline-block;
  width: 710rpx;
  margin: 0rpx 12rpx 30rpx 12rpx;
  flex-shrink: 0;
}

.list-img-box {
  width: 710rpx;
  height: 410rpx;
  position: relative;
  text-align: center;
}

.list-img-box-img {
  width: 710rpx;
  height: 410rpx;
  border-radius: 8rpx;
}

.date-info {
  position: absolute;
  left: 8rpx;
  bottom: 5rpx;
  font-size: 16rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 5rpx 10rpx;
  border-radius: 20rpx;
  color: #fff;
}

.view-count {
  position: absolute;
  right: 8rpx;
  bottom: 5rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 5rpx 10rpx;
  border-radius: 20rpx;
  font-size: 16rpx;
  color: #fff;
}

.list-info-box {
  font-size: 26rpx;
  line-height: 1.5;
  margin-top: 10rpx;
  color: #444;
}