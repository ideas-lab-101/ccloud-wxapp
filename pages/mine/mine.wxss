page {
    height: 100%;
    background-color: #ffffff;
}

.user-head {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 30rpx 10rpx;
  margin-bottom: 5px;
}

.uerinfo {
  flex: 1;
  font-size: 11pt;
}

.avatar {
  width: 180rpx;
}

.avatar-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}

.uerinfo {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  font-family: microsoft yahei;
}

/*数据栏*/
.userdata {
  display: flex;
  /* justify-content: space-between;
  align-items: center;  
  padding: 0 30rpx;*/
  padding-bottom: 30rpx;
}

.dataone {
  width: 140rpx;
  font-size: 9pt;
  display: flex;
  flex-direction: column;
}

.user-num {
  font-weight: bold;
  font-size: 14pt;
  font-family: microsoft yahei;
}

.item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 50px;
    margin-top: 10px;
    background-color: #fff;
    border-top: 1rpx #f0f0f0 solid;
}

.item-icon {
    flex: 0 0 18px;
    width: 18px;
    height: 18px;
    margin-left: 30rpx;
}

.contact_btn {
    float: right;
    margin-top: 13px;
    margin-right: 30rpx;
}

.item-text {
    flex: 1 1 auto;
    /* height: 50px; */
    display: flex;
    align-items: center;
    font-size: 16px;
    margin: 0 30rpx;
}

