page {
  height: 100%;
}

.user-head {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 30rpx 10rpx;
  background: linear-gradient(to bottom, #1596f2, #1596f2, #fff);
  border-bottom: 1rpx #f2f2f2 solid;
}

.uerinfo {
  flex: 1;
  font-size: 11pt;
}

.avatar {
  width: 180rpx;
}

.avatar-img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.uerinfo {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  font-family: microsoft yahei;
}

.scan {
  width: 220rpx;
  height: 65rpx;
  line-height: 65rpx;
  background-color: #fff;
  color: #000;
  text-align: center;
  position: absolute;
  right: 0rpx;
  top: 80rpx;
  border-radius: 50rpx 0rpx 0rpx 50rpx;
  font-size: 26rpx;
}

.scan .iconfont {
  padding-right: 5px;
}

.no-login {
  padding: 100rpx 160rpx;
}

.login-btn {
  background-color: #1596f2 !important;
}

/*数据栏*/

.userdata {
  display: flex;
  /* justify-content: space-between;
  align-items: center;  
  padding: 0 30rpx;*/
  padding-bottom: 30rpx;
}

.dataone {
  width: 140rpx;
  font-size: 9pt;
  display: flex;
  text-align: left;
  flex-direction: column;
}

.user-num {
  font-weight: bold;
  font-size: 14pt;
  font-family: microsoft yahei;
}

/*功能格子*/

.fun-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 40px;
  background-color: #fff;
  border-top: 15rpx #f7f7f7 solid;
  border-bottom: 2rpx #f7f7f7 solid;
}

.func-grid {
  display: flex;
  justify-content: space-around;
  border-bottom: 15rpx #f7f7f7 solid;
}

.func-item {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 9pt;
  margin: 40rpx 0rpx;
  border-right: #f7f7f7 solid 2px;
}

.func-item:last-child {
  border-right: 0px;
}

.func-item.clicked {
  background-color: #f2f2f2;
}

.func-item .iconfont {
  font-size: 35px;
  color: #6a6a6a;
  margin-bottom: 20rpx;
}

.list-item {
  border-bottom: 6rpx #f7f7f7 solid;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 48px;
  background-color: #fff;
  border-top: 2rpx #f7f7f7 solid;
}

.item .iconfont {
  flex: 0 0 18px;
  font-size: 38rpx;
  color: #6a6a6a;
  margin-left: 30rpx;
}

.contact_btn {
  float: right;
  margin-top: 13px;
  margin-right: 30rpx;
}

.item-text {
  flex: 1 1 auto;
  /* height: 50px; */
  display: flex;
  align-items: center;
  font-size: 16px;
  margin: 0 30rpx;
}

