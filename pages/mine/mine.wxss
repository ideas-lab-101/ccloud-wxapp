/*功能格子*/

.func-grid {
  display: flex;
  justify-content: space-around;
  border-bottom: 30rpx #f7f7f7 solid;
}

.func-item {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 9pt;
  margin: 40rpx 0rpx;
  border-right: #f7f7f7 solid 2px;
}
.func-item:last-child {
  border-right: 0px;
}

.func-item.clicked {
    background-color: #f2f2f2;
}

.func-item .c-iconfont {
  font-size: 35px;
  margin-bottom: 20rpx;
}

.item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 48px;
    margin-top: 1px;
    background-color: #fff;
    border-top: 1rpx #f0f0f0 solid;
}

.item .c-iconfont {
    flex: 0 0 18px;
    font-size: 38rpx;
    color: #555;
    margin-left: 30rpx;
}

.contact_btn {
    float: right;
    margin-top: 13px;
    margin-right: 30rpx;
}

.item-text {
    flex: 1 1 auto;
    /* height: 50px; */
    display: flex;
    align-items: center;
    font-size: 16px;
    margin: 0 30rpx;
}

