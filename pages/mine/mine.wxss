.item-state .bubble {
  display: inline-block;
  background-color: #e64340;
  text-align: center;
  justify-content: flex-start;
  align-content: center;
  position: absolute;
  top: 5rpx;
  right: 25rpx;
  width: 16px;
  height: 16px;
