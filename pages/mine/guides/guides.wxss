page {
    background-color: #efefef;
    padding-top: 30px;
}

.header {
    position: fixed;
    top: 0;
    width: 100%;
    height: 30px;
    line-height: 30px;
    padding: 0 30rpx;
    font-size: 16px;
    color: #888;
    background-color: #efefef;
}

.enroll {
    padding: 0 30rpx;
    margin-bottom: 10px;
    background-color: #fff;
    box-shadow: 0 0 10px 0 #ccc;
}

