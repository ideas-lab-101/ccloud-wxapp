.act-name {
    line-height: 30px;
    font-size: 16px;
    color: #353535;
    border-bottom: 2px dashed #eee;
}

.act-attr {
    line-height: 20px;
    font-size: 14px;
    color: #888;
}
.act-time {
    line-height: 20px;
    font-size: 12px;
    color: #888;
    text-align: right;
}

