<import src="../../../components/actionsheet/actionsheet.wxml" />
<template is="actionsheet" data="{{ ...$wux.actionSheet }}" />
<view class="header">活动列表
    <view class="list_number">共{{ pager.totalEnroll }}项</view>
</view>
<view class="enroll" wx:for="{{ enrolls }}">
    <view class="enroll-main">
        <view class="act-name">{{ item.ActivityName || '未知活动' }}</view>
        <block wx:if="{{item.mode == 1}}">
            <view class="act-attr" wx:if="{{ item.FeeID>0 }}">{{ item.FeeName }} ({{item.TotalCost>0? item.TotalCost+'元':'免费' }})</view>
            <view class="act-attr" wx:else>无效项</view>
            <view class="act-attr">
                <view class='c-iconfont icon-person'/>{{ item.name || '未知报名者' }} (
                <text style="color:#e64340;" wx:if="{{ item.orderState === 1001 }}">未缴费</text>
                <text style="color:#576b95;" wx:if="{{ item.intState === 0 }}">审核未通过</text>
                <text style="color:#09bb07;" wx:if="{{ item.intState === 2 }}">已确认</text>
                <text style="color:#999999;" wx:if="{{ item.intState === 99 }}">已归档</text> )
            </view>
        </block>
        <block wx:if="{{item.mode == 2}}">
            <view class="act-attr" wx:if="{{ item.FeeID>0 }}">{{ item.FeeName }} ({{item.TotalCost>0? item.TotalCost+'元':'免费' }})</view>
            <view class="act-attr" wx:else>无效项</view>    
            <view class="act-attr">
                <view class='c-iconfont icon-group'/>{{ item.group || '未知团队' }} (
                <text style="color:#e64340;" wx:if="{{ item.orderState === 1001 }}">未缴费</text>
                <text style="color:#576b95;" wx:if="{{ item.intState === 0 }}">审核未通过</text>
                <text style="color:#09bb07;" wx:if="{{ item.intState === 2 }}">已确认</text>
                <text style="color:#999999;" wx:if="{{ item.intState === 99 }}">已归档</text> )
            </view>
        </block>    
        <view class="act-attr">{{ item.AddTime || '未知时间' }}</view>
    </view>
    <view class="more_opts" catchtap='moreOpts' data-index="{{index}}" hover-class='touched' hover-start-time='0'>
        <view class="c-iconfont icon-more"></view>
    </view>
</view>
<view class="placeholder" wx:if="{{ enrolls.length === 0 }}">您暂时未参与任何活动哦~</view>
<howard-pager cur-page="{{ pager.pageNumber }}" total-page="{{ pager.totalPage }}" total-items="{{ pager.totalEnroll }}" bind:prev="prev" bind:next="next" bind:jumptopage='jumpToPage'></howard-pager>