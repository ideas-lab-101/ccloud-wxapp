page {
    height: 100%;
    background-color: #efefef;
    margin-top: 30px;
}

.header {
    position: fixed;
    top: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 30px;
    line-height: 30px;
    padding: 0 30rpx;
    font-size: 12px;
    color: #fff;
    background-color: #1596f2;
    z-index: 1000;
}

.list_number {
    flex-shrink: 0;
    flex-grow: 1;
    text-align: right;
    justify-content: space-around;
    align-items: center;
    height: 30px;
    font-size: 16px;
    color: #fff;
}

.weui-toptips {
    height: 30px;
    line-height: 30px;
    color: #fff;
    text-align: center;
    font-size: 14px;
}

.form {
    background-color: #fff;
    overflow: hidden;
}

.form_block_head {
    height: 30px;
    line-height: 30px;
    font-size: 16px;
    color: #4e5e71;
    background-color: #efefef;
    border-left: 5px solid #4e5e71;
    padding: 0 30rpx;
}

.fake_input {
    height: 0;
    width: 0;
    min-height: unset;
    opacity: 0;
}

.attachment {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-pack: distribute;
    justify-content: space-around;
    background-color: #efefef;
    height: 60px;
    border: 1px solid #ddd;
    border-radius: 2px;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    margin: 10px 30rpx;
    overflow: hidden;
}

.attachment .attachment_thumb {
    -webkit-box-flex: 0;
    -ms-flex: none;
    flex: none;
    width: 32px;
    height: 32px;
    margin-left: 10px;
    margin-right: 10px;
}

.attachment .attachment_info {
    -webkit-box-flex: 1;
    -ms-flex: auto;
    flex: auto;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -ms-flex-direction: column;
    flex-direction: column;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    word-break: break-all;
}

.attachment .attachment_info .attachment_name {
    -webkit-box-flex: 1;
    -ms-flex: auto;
    flex: auto;
    line-height: 25px;
    color: #8a8a8a;
    font-size: 14px;
}

.attachment .attachment_info .attachment_desc {
    -webkit-box-flex: 1;
    -ms-flex: auto;
    flex: auto;
    line-height: 20px;
    text-align: left;
    color: #ccc;
    font-size: 10px;
}

.attachment .attachment_size {
    -webkit-box-flex: 0;
    -ms-flex: none;
    flex: none;
    color: #8a8a8a;
    font-size: 10px;
    margin-left: 10px;
    margin-right: 10px;
}

.attachment .attachment_opts {
    -webkit-box-flex: 0;
    -ms-flex: none;
    flex: none;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    width: 50px;
    height: 100%;
}

.attachment .attachment_opts.clicked {
    background-color: #8a8a8a;
}

.attachment .attachment_opts image {
    width: 20px;
    height: 20px;
}

.add_attachment {
    height: 80px;
    line-height: 78px;
    margin: 20px 30rpx;
    text-align: center;
    background-color: #fefefe;
    border: 1px solid #ddd;
    border-radius: 2px;
    font-size: 12px;
    color: #8a8a8a;
}

.add_attachment.clicked {
    background-color: #efefef;
}

.add_attachment text {
    font-size: 18px;
    margin-right: 12px;
}