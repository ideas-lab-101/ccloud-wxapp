page {
    background-color: #f7f7f7;
    padding-top: 30px;
}

.header {
    position: fixed;
    top: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 30px;
    line-height: 30px;
    padding: 0 30rpx;
    font-size: 12px;
    color: #fff;
    background-color: #1596f2;
    z-index: 1000;
}

.list_number {
    flex-shrink: 0;
    flex-grow: 1;
    text-align: right;
    justify-content: space-around;
    align-items: center;
    height: 30px;
    font-size: 16px;
    color: #fff;
}

.member {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
    background-color: #fff;
}

.member-main {
    flex: auto;
    padding-left: 30rpx;
}

.more_infos {
    flex: none;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 120px;
    color: #888;
    margin-left: 10px;
}
.more_infos text{
    font-size: 22rpx;
}

.act-name {
    line-height: 30px;
    color: #000;
    font-size: 14px;
}

.act-attr {
    line-height: 20px;
    font-size: 12px;
    flex: auto;
    display: flex;
    align-items: center;
    color: #4e5e71;
}

.act-attr .c-iconfont {
    margin-right: 5px;
}

.placeholder {
    line-height: 30px;
    font-size: 14px;
    color: #888;
    padding: 30px;
    text-align: center;
}
