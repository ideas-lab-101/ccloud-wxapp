page {
    background-color: #efefef;
    padding-top: 30px;
}

.header {
    position: fixed;
    top: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 30px;
    line-height: 30px;
    padding: 0 30rpx;
    font-size: 12px;
    color: #fff;
    background-color: #4e5e71;
    z-index: 1000;
}

.list_number {
    flex: 0 0 50px;
    justify-content: space-around;
    align-items: center;
    height: 30px;
    font-size: 16px;
    color: #fff;
}

.message {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
    background-color: #fff;
}

.message-main {
    flex: auto;
    padding-left: 30rpx;
}

.more_opts {
    flex: none;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 60px;
    margin-left: 10px;
}

.more_opts.touched {
    background-color: #eceef8;
}

.more_opts image {
    width: 20px;
    height: 20px;
}

.act-name {
    line-height: 30px;
    color: #3f51b5;
    font-size: 14px;
}

.act-attr {
    line-height: 20px;
    font-size: 12px;
    flex: auto;
    display: flex;
    align-items: center;
    color: #888;
}

.act-attr .c-iconfont {
    margin-right: 5px;
}

.placeholder {
    line-height: 30px;
    font-size: 14px;
    color: #888;
    padding: 30px;
    text-align: center;
}
