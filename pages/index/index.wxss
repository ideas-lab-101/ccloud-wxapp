page {
    background-color: #efefef;
}

.container_fliud {
    padding: 20px 10px;
}

.item {
    border-radius: 5px;
    position: relative;
    margin-bottom: 20px;
    min-height: 160px;
    overflow: hidden;
}

.info {
    position: absolute;
    top: 0;
    height: 130px;
    width: 100%;
    display: flex;
    background-color: #fff;
    box-shadow: 0 0 10px #333;
}

.info.activity {
    border-left: 5px solid #FF8200;
}

.info.activity.open .info_left, .drawer .button.activity{
    background-color: #FF8200;
}

.info.news {
    border-left: 5px solid #1596f2;
}

.info.news.open .info_left,.drawer .button.news {
    background-color: #1596f2;
}

.info.vote {
    border-left: 5px solid #d200ff;
}

.info.vote.open .info_left,.drawer .button.vote {
    background-color: #d200ff;
}


.info.open .info_left .type, .info.open .info_left .title,
.info.open .info_left .time {
    color: #fff;
}

.info_left {
    flex: none;
    width: 80px;
    border-right: 1px dashed #9e9b90;
}

.info_left .type {
    display: flex;
    align-items: center;
    height: 70px;
    font-size: 14px;
    color: #6e6b60;
    padding-left: 5px;
}

.info_left .type image {
    flex: none;
    width: 20px;
    height: 20px;
    margin-right: 5px;
}

.info_left .title {
    height: 20px;
    line-height: 20px;
    padding-left: 5px;
    font-size: 10px;
    color: #9e9b90;
}

.info_left .time {
    height: 30px;
    line-height: 15px;
    padding-left: 5px;
    font-size: 12px;
    color: #6e6b60;
}

.info_right {
    flex: auto;
}

.info_right .name {
    height: 70px;
    display: flex;
    align-items: center;
    padding-left: 20px;
    padding-right: 20px;
    font-size: 16px;
    color: #333;
}

.info_right .bottom {
    height: 50px;
    display: flex;
    justify-content: space-between;
    padding: 0 10px;
}

.info_right .left, .info_right .right {
    flex: 1 1 48%;
}

.info_right .title {
    height: 20px;
    line-height: 20px;
    padding-left: 10px;
    font-size: 10px;
    color: #9e9b90;
}

.info_right .content {
    height: 30px;
    line-height: 15px;
    padding-left: 10px;
    font-size: 12px;
    color: #6e6b60;
    overflow: hidden;
    text-overflow: ellipsis;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2; 
}

.drawer {
    position: relative;
    height: 220px;
    margin-top: -50px;
    background-color: #d4d4d5;
    opacity: 0.4;
    /* filter: brightness(40%); */
    transition: margin-top 0.5s ease-out, filter 0.5s ease-out;
    overflow: hidden;
}

.drawer.open {
    margin-top: 130px;
    opacity: 1;
    /* filter: brightness(100%); */
}

.drawer_bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
}

.drawer .button {
    position: absolute;
    bottom: 40px;
    left: 50%;
    width: 200px;
    height: 40px;
    line-height: 40px;
    margin-left: -100px;
    font-size: 14px;
    letter-spacing: 5px;
    text-align: center;
    color: #fff;
    border-radius: 5px;
    background-color: #1596f2;
}
