page {
    background-color: #4e5e71;
}

.container_fliud {
    padding: 20px 10px;
}

.item {
    border-radius: 5px;
    position: relative;
    margin-bottom: 20px;
    min-height: 160px;
    overflow: hidden;
}

.info {
    position: absolute;
    top: 0;
    height: 130px;
    width: 100%;
    display: flex;
    background-color: #fff;
    box-shadow: 0 0 10px #333;
}

.info.activity {
    border-left: 5px solid #03a9f4;
}

.info.sign {
    border-left: 5px solid #4caf50;
}

.info.open.activity .info_left {
    background-color: #03a9f4;
}

.info.open.sign .info_left {
    background-color: #4caf50;
}

.info.open .info_left .type, .info.open .info_left .title,
.info.open .info_left .time {
    color: #fff;
}

.info_left {
    flex: none;
    width: 80px;
    border-right: 1px dashed #9e9b90;
}

.info_left .type {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 70px;
    font-size: 14px;
    color: #6e6b60;
}

.info_left .type image {
    flex: none;
    width: 20px;
    height: 20px;
    margin-right: 5px;
}

.info_left .title {
    height: 20px;
    line-height: 20px;
    padding-left: 5px;
    font-size: 10px;
    color: #9e9b90;
}

.info_left .time {
    height: 30px;
    line-height: 15px;
    padding-left: 5px;
    font-size: 12px;
    color: #6e6b60;
}

.info_right {
    flex: auto;
}

.info_right .name {
    height: 70px;
    display: flex;
    align-items: center;
    padding-left: 20px;
    padding-right: 20px;
    font-size: 16px;
    color: #333;
}

.info_right .bottom {
    height: 50px;
    display: flex;
    justify-content: space-between;
    padding: 0 10px;
}

.info_right .left, .info_right .right {
    flex: 1 1 48%;
}

.info_right .title {
    height: 20px;
    line-height: 20px;
    padding-left: 10px;
    font-size: 10px;
    color: #9e9b90;
}

.info_right .location {
    height: 30px;
    line-height: 15px;
    padding-left: 10px;
    font-size: 12px;
    color: #6e6b60;
}

.drawer {
    position: relative;
    height: 220px;
    margin-top: -50px;
    background-color: #d4d4d5;
    filter: brightness(40%);
    transition: margin-top 0.5s ease-out, filter 0.5s ease-out;
    overflow: hidden;
}

.drawer.open {
    margin-top: 130px;
    filter: brightness(100%);
}

.drawer_bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
}

.drawer .button {
    position: absolute;
    bottom: 40px;
    left: 50%;
    width: 200px;
    height: 40px;
    line-height: 40px;
    margin-left: -100px;
    font-size: 14px;
    letter-spacing: 5px;
    text-align: center;
    color: #333;
    border-radius: 5px;
    background-color: #ffeb3b;
}
