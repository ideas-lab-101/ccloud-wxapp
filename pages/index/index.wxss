page {
    height: 100%;
}

.container {
    position: relative;
    height: 100%;
    /* background: linear-gradient(to top, black, white); */
}

.bg_img {
    position: relative;
    height: 80%;
    width: 100%;
    filter: blur(5px) grayscale(60%);
}

.bg_img::after {
    content: ' ';
    position: absolute;
    bottom: 0;
    height: 0;
    border-right: 750rpx solid #000;
    border-top: 150px solid transparent;
}

.bg_pure {
    position: relative;
    height: 80%;
    width: 100%;
    background: #fbca03 url('data:image/png;base64,') right 0 no-repeat;
    /* filter: blur(1px) grayscale(60%); */
}

.bg_pure::after {
    content: ' ';
    position: absolute;
    bottom: 0;
    height: 0;
    border-right: 750rpx solid #fff;
    border-top: 150px solid transparent;
}

.discover {
    position: absolute;
    top: 0;
    display: flex;
    align-items: center;
    height: 20%;
    width: 100%;
    padding-left: 30rpx;
    /* color: #fff; */
    color: #000;
    font-size: 28px;
    font-weight: bold;
    letter-spacing: 10px;
}

.swiper {
    position: absolute;
    top: 20%;
    height: 76%;
    width: 100%;
}

