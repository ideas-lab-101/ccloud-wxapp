.img_wrapper {
    height: 90%;
    width: 690rpx;
    margin: 0 auto;
    border-radius: 10px;
    overflow: hidden;
}

.slide-image {
    display: block;
    height: 100%;
    width: 100%;
    filter: brightness(0.4);
    /* box-shadow: 0 0 10px 0 #333; */
}

.act_name {
    position: absolute;
    top: 30rpx;
    left: 60rpx;
    width: 550rpx;
    line-height: 35px;
    color: #fff;
    font-size: 25px;
}

.act_location {
    display: flex;
    align-items: center;
    margin-top: 10px;
    line-height: 20px;
    color: #ddd;
    font-size: 14px;
}

.act_location image {
    flex: 0 0 16px;
    width: 16px;
    height: 16px;
    margin-right: 5px;
}
