page {
    background-color: #f7f7f7;
}

.container_fliud {
    padding: 20px 10px;
}

.item {
    border-radius: 5px;
    position: relative;
    margin-bottom: 20px;
    min-height: 160px;
    overflow: hidden;
}

.info {
    position: absolute;
    top: 0;
    height: 130px;
    width: 100%;
    display: flex;
    background-color: #fff;
    box-shadow: 0 0 10px #333;
}

.info.activity {
    border-left: 5px solid #FF8200;
}

.info.activity.open .info_left, .drawer .button.activity{
    background-color: #FF8200;
}

.info.news {
    border-left: 5px solid #1596f2;
}

.info.news.open .info_left,.drawer .button.news {
    background-color: #1596f2;
}

.info.vote {
    border-left: 5px solid #c007e8;
}

.info.vote.open .info_left,.drawer .button.vote {
    background-color: #c007e8;
}

.info.app {
    border-left: 5px solid #15b505;
}

.info.app.open .info_left,.drawer .button.app {
    background-color: #15b505;
}

.info.app .info_left{
    border-right: 0;
}
.info.app .info_right .name{
    height: auto; font-size: 44rpx; font-weight: 500; padding-top: 30rpx; padding-bottom: 30rpx; color: #15b505;
}

.info.app .info_right ._desc{
    font-size: 28rpx; left: 1.6; color: #333;
}


.info.open .info_left .type, .info.open .info_left .title,
.info.open .info_left .time {
    color: #fff;
}

.info_left {
    flex: none;
    width: 80px;
    border-right: 1px dashed #bbbbbb;
}

.info_left .type {
    display: flex;
    align-items: center;
    height: 70px;
    font-size: 14px;
    padding-left: 5px;
}
.info_left .type text:last-child{ margin-left: 6rpx;}
.info_left .type .iconfont {font-size: 26rpx;}

.info_left .title {
    height: 20px;
    line-height: 20px;
    padding-left: 5px;
    font-size: 10px;
    color: #999;
}

.info_left .time {
    height: 30px;
    line-height: 15px;
    padding-left: 5px;
    font-size: 12px;
    color: #333;
}

.info_right {
    flex: auto;
}

.info_right .name {
    height: 140rpx;
    display: flex;
    align-items: center;
    padding-left: 20px;
    padding-right: 20px;
    font-size: 34rpx;
}

.info_right .bottom {
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    padding: 0 10px;
}

.info_right .left, .info_right .right {
    flex: 1 1 48%;
}

.info_right .title {
    height: 40rpx;
    line-height: 20px;
    padding-left: 10px;
    font-size: 20rpx;
    color: #999999;
}

.info_right .content {
    height: 60rpx;
    line-height: 15px;
    padding-left: 10px;
    font-size: 24rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2; 
}
.info_right ._desc{
    font-size: 24rpx;
    color: #666;
    padding: 0 40rpx;
    line-height: 1.8;
    overflow: hidden;
    text-overflow: ellipsis;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:3;
}
.drawer {
    position: relative;
    height: 220px;
    margin-top: -50px;
    background-color: #d4d4d5;
    opacity: 0.4;
    /* filter: brightness(40%); */
    transition: margin-top 0.5s ease-out, filter 0.5s ease-out;
    overflow: hidden;
}

.drawer.open {
    margin-top: 130px;
    opacity: 1;
    /* filter: brightness(100%); */
}

.drawer_bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
}

.drawer .button {
    position: absolute;
    bottom: 40px;
    left: 50%;
    width: 200px;
    height: 40px;
    line-height: 40px;
    margin-left: -100px;
    font-size: 14px;
    letter-spacing: 5px;
    text-align: center;
    color: #fff;
    border-radius: 5px;
    background-color: #1596f2;
}
