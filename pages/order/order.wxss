page {
    height: 100%;
    background-color: #efefef;
}

.weui-toptips {
    height: 30px;
    line-height: 30px;
    color: #fff;
    text-align: center;
    font-size: 14px;
}

.discover {
    display: flex;
    align-items: center;
    height: 80px;
    width: 100%;
    padding: 0 30rpx;
    color: #000;
    font-size: 24px;
    font-weight: bold;
    letter-spacing: 2px;
}

.activity {
    height: 250px;
    width: 100%;
    position: relative;
}

.img_wrapper {
    height: 100%;
    width: 690rpx;
    margin: 0 auto;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 0 20px 0 #999;
}

.slide-image {
    display: block;
    height: 100%;
    width: 100%;
    filter: brightness(0.4);
}

.act_name {
    position: absolute;
    top: 40rpx;
    left: 60rpx;
    width: 600rpx;
    line-height: 40px;
    color: #fff;
    font-size: 26px;
}

.act_location {
    display: flex;
    align-items: center;
    margin-top: 10px;
    line-height: 20px;
    color: #ddd;
    font-size: 14px;
}

.act_location image {
    flex: 0 0 16px;
    width: 16px;
    height: 16px;
    margin-right: 5px;
}

.form {
    width: 690rpx;
    margin: 30px auto;
    border-radius: 10px;
    background-color: #fff;
    overflow: hidden;
    box-shadow: 0 0 10px 0 #999;
}

.form_head {
    height: 50px;
    line-height: 50px;
    font-size: 14px;
    text-align: center;
    background-color: #fff;
}

.form_head text {
    margin: 0 4px;
    color: red;
}

.form_block_head {
    height: 30px;
    line-height: 30px;
    font-size: 16px;
    color: #8a8a8a;
    background-color: #efefef;
    padding: 0 30rpx;
    margin-top: 10px;
}

.section_group {
    display: flex;
    justify-content: space-between;
}

.section_group .section {
    flex: 1 1 auto;
}

.section {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    /* height: 50px; */
    padding: 0 30rpx;
    background-color: #fff;
    /* border-bottom: 1px solid #efefef; *//* overflow: hidden; */
}

.section_bottom {
    height: 10px;
}

.section .with_unit {
    flex: 1 1 50%;
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
}

.section .with_unit input {
    flex: 1 1 auto;
    height: 30px;
    line-height: 30px;
    font-size: 16px;
    padding: 0 30rpx;
    border: 1px solid #ccc;
}

.section .with_unit .section_unit {
    flex: 0 0 40px;
    display: flex;
    align-items: center;
    height: 30px;
    font-size: 14px;
    margin-left: 10px;
    color: #8a8a8a;
}

.picture {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 30rpx;
    background-color: #fff;
    overflow: hidden;
}

.picture_notice {
    flex: 1 1 auto;
    height: 100px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    margin-right: 10px;
}

.picture_notice .notice {
    flex: 1 1 auto;
    font-size: 14px;
    /* display: flex;
    align-items: center;
    justify-content: center; */
    color: #3a342a;
}

.fake_input {
    height: 0;
    width: 0;
    min-height: unset;
    opacity: 0;
}

.section_title {
    flex: 0 0 100%;
    height: 50px;
    line-height: 50px;
    font-size: 14px;
    /* display: flex; *//* align-items: center; *//* justify-content: flex-start; *//* margin-right: 10px; */
    color: #3a342a;
}

.section_title text {
    color: red;
    margin-left: -10px;
    margin-right: 4px;
}

.section>input {
    flex: 1 1 100%;
    height: 30px;
    line-height: 30px;
    font-size: 16px;
    padding: 0 30rpx;
    border: 1px solid #ccc;
}

.dropdown {
    position: relative;
}

.dropdown::after {
    content: ' ';
    position: absolute;
    display: block;
    width: 16px;
    height: 16px;
    right: 7px;
    bottom: 7px;
    background-image: url('data:image/png;base64,');
}

.pic_area {
    flex: 0 0 100px;
    height: 140px;
    background-color: #efefef;
    border: 2px dotted #ccc;
    border-radius: 10px;
    overflow: hidden;
}

.pic_area image {
    width: 100%;
    height: 100%;
}

.enroll_and_pay {
    height: 50px;
    line-height: 50px;
    color: #3a342a;
    font-size: 20px;
    background-color: #fbca03;
    border: 0;
    border-radius: 0 0 10px 10px;
}

.enroll_and_pay::after {
    border: 0;
}
