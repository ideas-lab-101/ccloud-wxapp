page {
    font-size: 32rpx;
    background: url('http://cloud.ideas-lab.cn/system/bg_vote_n.jpg') no-repeat top center; background-size: 100% 100%;
    height: 100vh;
}
.l-single-box{
    padding: 0 40rpx;
}
.l-single{
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.15);
    padding: 20rpx 20rpx;
    color: #626161;
}
.l-single.info{
    border-bottom: 0;
    color: black;
}

.l-single.info ._btn{
    background-color: #f84a06;
    color: white;
    border-radius: 6rpx;
}

.l-single ._rank{
    font-size: 30rpx;
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    line-height: 2;
}

.l-single ._info{
    flex: 1;
    display: flex;
    align-items: center;
}
.l-single ._info>view{
    position: relative;
}
.l-single ._info ._b{
    width: 80rpx;
    height: 112rpx;
}
.l-single ._info ._t{
    position: absolute;
    left: 13rpx;
    top: 11rpx;
    z-index: 10;
    width: 56rpx;
    height: 79rpx;
}
.l-single ._info view{

}
.l-single ._info text{
    display: inline-block;
    padding-left: 20rpx;
}
.l-single ._num{
   color: #f84a06;
    font-style: italic;
    font-size: 40rpx;
    padding: 0 20rpx;
}
.l-single ._btn{
    font-size: 30rpx;
    line-height: 2.3;
    padding: 0 25rpx;
    margin-left: 20rpx;
}

.l-info{
    border-bottom: 4px solid #ffb680;
    margin: 0 40rpx;
    height: 120rpx;
    background: url('http://cloud.ideas-lab.cn/system/bg_vote_self.png') center no-repeat; background-size: 100% auto;
}
.l-info-font{
    text-align: center;
    height: 120rpx;
    line-height: 120rpx;
    font-size: 34rpx;
}
.l-active{
    padding: 40rpx 40rpx 0rpx;
    display: flex;
    height: 260rpx;
}
.l-active image{
    width: 160rpx;
    height: 150rpx;
    box-shadow: 0 10rpx 25rpx rgba(0, 0, 0, 0.15);
}
.l-active>view{
    padding-left: 30rpx;
    flex: 1;
}

.l-active>view ._title{
    font-size: 46rpx;
}

.l-active>view ._desc{
    margin-top: 20rpx;
    font-size: 26rpx;
    color: #626161;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
}

.l-scroll{
    height: calc(100vh - 380rpx);
}
