page {
    font-size: 32rpx;
    background: url('http://cloud.ideas-lab.cn/system/bg_vote_n.jpg') no-repeat top center; background-size: 100% 100%;
    height: 100vh;
}
.del-scroll{
    height: calc(100vh - 86rpx);
}
.del-info{
    display: flex;
    margin: 40rpx 40rpx 20rpx;
    background-color: rgba(255, 255, 255, 0.5);
    border-radius: 10rpx;
    overflow: hidden;
}

.del-info ._photo{
   width: 150rpx;
}
.del-info>view{
    flex: 1;
    padding: 20rpx 40rpx;
    line-height: 1.6;
    font-size: 32rpx;
    color: #666666;
}

.del-info ._name{
   font-size: 40rpx;
   color: black;
}

.del-title{
    text-align: center;
    font-size: 34rpx;
    padding: 20rpx;
}


.del-image{
    position: relative;
    margin: 0 40rpx;
    border-radius: 10rpx;
    overflow: hidden;
    margin-bottom: 20rpx;
    text-align: left;
}
.del-image image{
    width: 100%;
    height: 350rpx;
}
.del-image ._desc{
    position: absolute;
    z-index: 10;
    background-color: rgba(0, 0, 0, 0.6);
    left: 0;
    bottom: 0;
    width: 100%;
}
.del-image ._desc>view{
    padding: 20rpx 30rpx;
}
.del-image ._desc>view>view{
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp: 3;
    color: white;
    font-size: 24rpx;
    line-height: 1.4;
}

.del-image ._play{
    opacity: 0.8;
    position: absolute;
    left: 43%;
    top: 35%;
    z-index: 20;
    display: inline-block;
}
.del-image ._play .iconfont{
    font-size: 80rpx;
    color: black;
}

.vote-footer{
    position: relative;
    width: 100%;
    height: 86rpx;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
}
.vote-footer view{
    display: inline-block; vertical-align: middle;line-height: 2;
}
.vote-footer image{
    width: 40rpx; height: 40rpx; margin-top: 20rpx;
}

.vote-footer button{
    border: 0 !important;
    width: 200rpx;
    margin: 0;
    padding: 0;
    line-height: 2;
}
.vote-footer button::after,.vote-footer button::before{
    border: 0 !important;
}